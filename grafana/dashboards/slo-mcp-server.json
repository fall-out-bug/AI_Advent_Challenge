{
  "id": null,
  "uid": "slo-mcp-server",
  "title": "SLO - MCP Server",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "30s",
  "timezone": "browser",
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "type": "stat",
      "title": "Error Rate (5m)",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "(rate(mcp_requests_total{status=\"error\"}[5m]) / clamp_min(rate(mcp_requests_total[5m]), 1e-6)) * 100",
          "legendFormat": "Error Rate"
        }
      ],
      "options": {
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        },
        "orientation": "horizontal",
        "textMode": "value",
        "colorMode": "thresholds",
        "graphMode": "none",
        "justifyMode": "center"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": 0 },
              { "color": "yellow", "value": 5 },
              { "color": "red", "value": 10 }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "id": 2,
      "type": "timeseries",
      "title": "Request P95 Latency",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 8 },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, rate(mcp_request_duration_seconds_bucket[$__rate_interval]))",
          "legendFormat": "P95"
        },
        {
          "expr": "0 * histogram_quantile(0.95, rate(mcp_request_duration_seconds_bucket[$__rate_interval])) + 5",
          "legendFormat": "SLO Target"
        }
      ],
      "options": {
        "legend": { "displayMode": "table", "placement": "bottom" },
        "tooltip": { "mode": "single" }
      }
    },
    {
      "id": 3,
      "type": "timeseries",
      "title": "Request Volume",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 16 },
      "targets": [
        {
          "expr": "rate(mcp_requests_total[1m])",
          "legendFormat": "Requests/s"
        }
      ],
      "options": {
        "legend": { "displayMode": "hidden", "placement": "bottom" },
        "tooltip": { "mode": "single" }
      }
    }
  ]
}
