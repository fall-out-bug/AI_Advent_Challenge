# Makefile for Multi-Model Multi-Agent System

.PHONY: help install test lint format clean build start stop demo status logs test-models start-bridge stop-bridge restart-bridge start-traefik stop-traefik restart-traefik logs-traefik status-traefik demo-chadgpt chadgpt-models chadgpt-recommend chadgpt-status setup-chadgpt

# Default target
help:
	@echo "ğŸŒŸ Multi-Model Multi-Agent System"
	@echo "================================="
	@echo ""
	@echo "Available targets:"
	@echo "  install     - Install dependencies"
	@echo "  test        - Run all tests"
	@echo "  test-models - Test with different models"
	@echo "  lint        - Run code linting"
	@echo "  format      - Format code with black"
	@echo "  clean       - Clean temporary files"
	@echo "  build       - Build Docker images"
	@echo "  start       - Start all services (host network)"
	@echo "  start-bridge- Start all services (bridge network)"
	@echo "  start-traefik - Start services with Traefik"
	@echo "  stop        - Stop all services"
	@echo "  restart     - Restart all services"
	@echo "  start-starcoder - Start StarCoder service only"
	@echo "  stop-starcoder  - Stop StarCoder service only"
	@echo "  demo        - Run demo script"
	@echo "  status      - Check service status"
	@echo "  logs        - Show service logs"
	@echo "  logs-traefik  - Show Traefik logs"
	@echo "  health      - Check service health"
	@echo "  stats       - Show service statistics"
	@echo "  full-setup  - Complete system setup (StarCoder + agents)"
	@echo ""
	@echo "ğŸ§  ChadGPT Smart System:"
	@echo "  demo-chadgpt        - Run ChadGPT demo"
	@echo "  chadgpt-models      - Show available ChadGPT models"
	@echo "  chadgpt-recommend   - Get smart model recommendation"
	@echo "  chadgpt-status     - Check ChadGPT configuration"
	@echo "  setup-chadgpt      - Setup ChadGPT with API key"
	@echo ""
	@echo "ğŸ“¦ Poetry Commands:"
	@echo "  poetry-install - Install Poetry dependencies"
	@echo "  poetry-update  - Update Poetry dependencies"
	@echo "  poetry-shell   - Activate Poetry shell"
	@echo "  poetry-add     - Add new dependency"
	@echo "  poetry-add-dev - Add new development dependency"
	@echo "  poetry-export  - Export requirements.txt"

# Install dependencies
install:
	@echo "ğŸ“¦ Installing dependencies..."
	poetry install

# Run tests
test:
	@echo "ğŸ§ª Running tests..."
	poetry run pytest

# Test with different models
test-models:
	@echo "Testing with StarCoder..."
	poetry run python quick_model_test.py starcoder
	@echo "Testing with Mistral..."
	poetry run python quick_model_test.py mistral
	@echo "Testing with Qwen..."
	poetry run python quick_model_test.py qwen
	@echo "Testing with TinyLlama..."
	poetry run python quick_model_test.py tinyllama

# Run linting
lint:
	@echo "ğŸ” Running linting..."
	poetry run flake8 .
	poetry run mypy .

# Format code
format:
	@echo "ğŸ¨ Formatting code..."
	poetry run black .
	poetry run isort .

# Clean temporary files
clean:
	@echo "ğŸ§¹ Cleaning temporary files..."
	find . -type f -name "*.pyc" -delete
	find . -type d -name "__pycache__" -delete
	find . -type d -name "*.egg-info" -exec rm -rf {} +
	rm -rf .pytest_cache
	rm -rf .mypy_cache

# Build Docker images
build:
	@echo "ğŸ”¨ Building Docker images..."
	docker-compose build

# Start all services (host network)
start:
	@echo "ğŸš€ Starting all services..."
	@echo "Checking if StarCoder is running..."
	@if ! docker ps | grep -q starcoder; then \
		echo "Starting StarCoder service..."; \
		docker-compose up -d starcoder; \
	fi
	@echo "â³ Waiting for services to be ready..."
	@sleep 10
	@echo "Starting agent services..."
	docker-compose up -d generator reviewer

# Start all services (bridge network)
start-bridge:
	@echo "ğŸš€ Starting all services with bridge network..."
	@echo "Checking if StarCoder is running..."
	@if ! docker ps | grep -q starcoder; then \
		echo "Starting StarCoder service..."; \
		docker-compose up -d starcoder; \
	fi
	@echo "â³ Waiting for services to be ready..."
	@sleep 10
	@echo "Starting agent services..."
	docker-compose up -d generator reviewer

# Start services with Traefik
start-traefik:
	@echo "ğŸš€ Starting services with Traefik..."
	@echo "Checking if local models are built..."
	@docker images | grep local_models || (echo "âš ï¸  Building local models..."; cd ../local_models && docker-compose build)
	@echo "Starting services..."
	docker-compose -f docker-compose.traefik.yml up -d
	@echo "â³ Waiting for services to be ready..."
	@sleep 15
	@echo "ğŸ” Checking service health..."
	@timeout 60 bash -c 'until curl -f http://generator.localhost/health > /dev/null 2>&1; do echo "Waiting for generator..."; sleep 2; done' || (echo "âŒ Generator failed to start"; exit 1)
	@timeout 60 bash -c 'until curl -f http://reviewer.localhost/health > /dev/null 2>&1; do echo "Waiting for reviewer..."; sleep 2; done' || (echo "âŒ Reviewer failed to start"; exit 1)
	@echo "âœ… All services are running!"
	@echo "ğŸŒ Generator: http://generator.localhost"
	@echo "ğŸŒ Reviewer: http://reviewer.localhost"

# Stop all services
stop:
	@echo "ğŸ›‘ Stopping all services..."
	docker-compose down

# Restart all services
restart: stop start

# Start StarCoder service only
start-starcoder:
	@echo "ğŸš€ Starting StarCoder service..."
	docker-compose up -d starcoder
	@echo "â³ Waiting for StarCoder to load..."
	@sleep 30
	@echo "âœ… StarCoder is ready!"

# Stop StarCoder service only
stop-starcoder:
	@echo "ğŸ›‘ Stopping StarCoder service..."
	docker-compose stop starcoder


# Stop bridge network services
stop-bridge:
	@echo "ğŸ›‘ Stopping bridge network services..."
	docker-compose down

# Restart bridge network services
restart-bridge: stop-bridge start-bridge


# Stop Traefik services
stop-traefik:
	@echo "ğŸ›‘ Stopping Traefik services..."
	docker-compose -f docker-compose.traefik.yml down

# Restart Traefik services
restart-traefik: stop-traefik start-traefik

# Show service logs
logs:
	@echo "ğŸ“‹ Showing service logs..."
	docker-compose logs -f

# Show Traefik logs
logs-traefik:
	@echo "ğŸ“‹ Showing Traefik logs..."
	docker-compose -f docker-compose.traefik.yml logs -f

# Check service status
status:
	@echo "ğŸ“Š Service Status:"
	@echo "================="
	@docker ps --format "table {{.Names}}\t{{.Status}}\t{{.Ports}}"

# Check service health
health:
	@echo "ğŸ¥ Checking service health..."
	@echo "StarCoder:"
	@curl -s http://localhost:8003/health || echo "âŒ StarCoder not responding"
	@echo "Generator:"
	@curl -s http://localhost:9001/health || echo "âŒ Generator not responding"
	@echo "Reviewer:"
	@curl -s http://localhost:9002/health || echo "âŒ Reviewer not responding"

# Show service statistics
stats:
	@echo "ğŸ“ˆ Service Statistics:"
	@echo "====================="
	@docker stats --no-stream

# Run demo
demo:
	@echo "ğŸ­ Running demo..."
	poetry run python demo.py

# Full system setup
full-setup:
	@echo "ğŸ› ï¸  Setting up development environment..."
	@echo "Building StarCoder image..."
	docker-compose build starcoder
	@echo "Starting StarCoder service..."
	docker-compose up -d starcoder
	@echo "Waiting for StarCoder to load..."
	@sleep 30
	@echo "Checking StarCoder health..."
	@timeout 60 bash -c 'until curl -f http://localhost:8003/health; do echo "Waiting for StarCoder..."; sleep 5; done' || (echo "âŒ StarCoder failed to start"; exit 1)
	@echo "Starting agent services..."
	docker-compose up -d generator reviewer
	@echo "âœ… Full system setup complete!"
	@echo "ğŸŒ StarCoder: http://localhost:8003"
	@echo "ğŸŒ Generator: http://localhost:9001"
	@echo "ğŸŒ Reviewer: http://localhost:9002"

# Quick test
quick-test:
	@echo "âš¡ Quick test..."
	poetry run python quick_model_test.py

# Deploy to production
deploy:
	@echo "ğŸš€ Deploying to production..."
	docker-compose -f docker-compose.traefik.yml up -d

# Backup results
backup:
	@echo "ğŸ’¾ Backing up results..."
	tar -czf results_backup_$(shell date +%Y%m%d_%H%M%S).tar.gz results/

# Poetry commands
poetry-install:
	@echo "ğŸ“¦ Installing Poetry dependencies..."
	poetry install

poetry-update:
	@echo "ğŸ”„ Updating Poetry dependencies..."
	poetry update

poetry-shell:
	@echo "ğŸš Activating Poetry shell..."
	poetry shell

poetry-add:
	@echo "â• Adding new dependency..."
	@if [ -z "$$PACKAGE" ]; then \
		echo "âŒ PACKAGE environment variable is not set"; \
		echo "   Usage: PACKAGE='package-name' make poetry-add"; \
		exit 1; \
	fi
	poetry add $$PACKAGE

poetry-add-dev:
	@echo "â• Adding new development dependency..."
	@if [ -z "$$PACKAGE" ]; then \
		echo "âŒ PACKAGE environment variable is not set"; \
		echo "   Usage: PACKAGE='package-name' make poetry-add-dev"; \
		exit 1; \
	fi
	poetry add --group dev $$PACKAGE

poetry-export:
	@echo "ğŸ“¤ Exporting requirements.txt..."
	poetry export -f requirements.txt --output requirements.txt

# ChadGPT Demo
demo-chadgpt: check-chadgpt-key
	@echo "ğŸŒŸ Running ChadGPT demo..."
	@echo "=========================="
	poetry run python chadgpt_demo.py

# Check ChadGPT API key
check-chadgpt-key:
	@if [ -z "$$CHADGPT_API_KEY" ]; then \
		echo "âŒ CHADGPT_API_KEY is not set"; \
		echo "   Set it with: export CHADGPT_API_KEY='your-key'"; \
		echo "   Or run: make setup-chadgpt"; \
		exit 1; \
	else \
		echo "âœ… CHADGPT_API_KEY is set"; \
	fi

# Show available ChadGPT models
chadgpt-models:
	@echo "ğŸ¤– Available ChadGPT Models:"
	@echo "============================"
	poetry run python manage_providers.py models

# Get smart model recommendation
chadgpt-recommend:
	@echo "ğŸ§  Smart Model Recommendation:"
	@echo "=============================="
	@if [ -z "$$TASK" ]; then \
		echo "âŒ TASK environment variable is not set"; \
		echo "   Usage: TASK='your task description' make chadgpt-recommend"; \
		echo "   Example: TASK='Create a web API' make chadgpt-recommend"; \
		exit 1; \
	fi
	@echo "ğŸ“ Task: $$TASK"
	@echo ""
	poetry run python manage_providers.py recommend --task "$$TASK"

# Check ChadGPT status
chadgpt-status:
	@echo "ğŸ” ChadGPT Configuration Status:"
	@echo "================================"
	@echo "API Key: $$(if [ -n "$$CHADGPT_API_KEY" ]; then echo "âœ… Set"; else echo "âŒ Not set"; fi)"
	@echo ""
	@echo "Testing ChadGPT connection..."
	poetry run python manage_providers.py test --provider chadgpt-real

# Setup ChadGPT with API key
setup-chadgpt:
	@echo "ğŸ”§ Setting up ChadGPT environment..."
	@echo "===================================="
	@if [ -f "../api_key.txt" ]; then \
		echo "ğŸ“ Found api_key.txt file"; \
		CHADGPT_KEY=$$(grep "chadgpt" ../api_key.txt | cut -d'=' -f2); \
		if [ -n "$$CHADGPT_KEY" ]; then \
			echo "ğŸ”‘ Found ChadGPT API key in api_key.txt"; \
			echo "ğŸ“¦ Installing dependencies..."; \
			poetry install; \
			echo "ğŸ§ª Testing configuration..."; \
			CHADGPT_API_KEY="$$CHADGPT_KEY" poetry run python manage_providers.py test --provider chadgpt-real; \
			echo ""; \
			echo "âœ… Setup complete!"; \
			echo "ğŸ”‘ To use ChadGPT, run:"; \
			echo "   export CHADGPT_API_KEY=\"$$CHADGPT_KEY\""; \
			echo "   make demo-chadgpt"; \
		else \
			echo "âŒ No ChadGPT API key found in api_key.txt"; \
			echo "   Please add: chadgpt=your-api-key"; \
		fi; \
	else \
		echo "âŒ api_key.txt file not found"; \
		echo "   Please create ../api_key.txt with: chadgpt=your-api-key"; \
	fi