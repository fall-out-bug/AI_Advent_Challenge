# Environment variables for Token Analysis System
# Copy this file to .env and modify values as needed

# Application settings
APP_NAME="Token Analysis System"
APP_VERSION="1.0.0"
APP_ENV=development
DEBUG=false

# Logging settings
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=

# Token counting settings
TOKEN_COUNTER_MODE=simple
TOKENS_PER_WORD_RATIO=1.3
LIMIT_PROFILE=practical

# ML service settings
ML_SERVICE_URL=http://localhost:8004
ML_SERVICE_TIMEOUT=30
ML_SERVICE_RETRY_ATTEMPTS=3

# Model client settings
MODEL_CLIENT_TIMEOUT=60
MODEL_CLIENT_MAX_TOKENS=1000
MODEL_CLIENT_TEMPERATURE=0.7

# Experiment settings
EXPERIMENT_RANDOM_SEED=42
EXPERIMENT_DETERMINISTIC=true
EXPERIMENT_SAFETY_MARGIN=0.9

# Performance settings
MAX_CONCURRENT_EXPERIMENTS=5
CACHE_SIZE=1000

# File paths
CONFIG_DIR=./config
MODEL_LIMITS_FILE=model_limits.yaml

# Production overrides (uncomment for production)
# APP_ENV=production
# DEBUG=false
# LOG_LEVEL=WARNING
# LOG_FORMAT=json
# LOG_FILE=/var/log/token-analysis.log
