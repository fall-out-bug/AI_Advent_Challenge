# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text eol=lf diff=python
*.pyi text eol=lf diff=python

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf

# Markdown files
*.md text eol=lf

# Configuration files
*.yml text eol=lf
*.yaml text eol=lf
*.toml text eol=lf
*.json text eol=lf
*.ini text eol=lf
*.cfg text eol=lf
*.conf text eol=lf

# Binary files
*.session binary
*.session-journal binary
*.pkl binary
*.db binary
*.sqlite binary
*.sqlite3 binary
*.pyc binary
*.pyo binary
*.so binary
*.egg binary
*.whl binary

# Images
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary

# Archives
*.zip binary
*.tar binary
*.gz binary
*.bz2 binary
*.xz binary

# Docker
Dockerfile text eol=lf
.dockerignore text eol=lf
docker-compose*.yml text eol=lf
