# Multi-stage Docker build for Test Agent CLI

# Stage 1: Builder
FROM python:3.11-slim as builder

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    build-essential \
    curl \
    git \
    && rm -rf /var/lib/apt/lists/*

# Install Poetry
RUN pip install poetry

# Copy dependency files and local packages
COPY pyproject.toml poetry.lock* ./
COPY shared/ ./shared/
COPY packages/ ./packages/

# Install dependencies (including pytest for test execution)
RUN poetry config virtualenvs.create false \
    && poetry install --no-interaction --no-ansi --no-root

# Stage 2: Runtime
FROM python:3.11-slim

WORKDIR /app

# Install runtime dependencies
RUN apt-get update && apt-get install -y \
    curl \
    git \
    && rm -rf /var/lib/apt/lists/*

# pytest will be installed via poetry dependencies

# Copy installed packages from builder
COPY --from=builder /usr/local/lib/python3.11/site-packages /usr/local/lib/python3.11/site-packages
COPY --from=builder /usr/local/bin /usr/local/bin

# Create non-root user
RUN useradd -m -u 1000 appuser && chown -R appuser:appuser /app

# Copy application code
COPY src/ ./src/
COPY shared/ ./shared/
COPY packages/ ./packages/

# Switch to non-root user
USER appuser

# Test Agent CLI doesn't expose HTTP port - it's a CLI tool
# Health check verifies Python environment is working
HEALTHCHECK --interval=30s --timeout=10s --start-period=10s \
  CMD python -c "import sys; sys.exit(0)" || exit 1

# Keep container running - CLI commands are executed via docker exec
# Example: docker exec test-agent python -m src.presentation.cli.test_agent.main /path/to/file.py
CMD ["tail", "-f", "/dev/null"]
